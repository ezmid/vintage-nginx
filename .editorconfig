# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

# Default values - PHP PSR-2 Coding Standards
# http://www.php-fig.org/psr/psr-2/
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Frontend - inspired by React repository
# https://github.com/facebook/react/blob/master/.editorconfig
[*.{js,jsx,json,css,scss}]
indent_size = 2

# Documentation
[*.md]
max_line_length = 0
trim_trailing_whitespace = false

# Makefile
[{Makefile,**.mk}]
indent_style = tab
